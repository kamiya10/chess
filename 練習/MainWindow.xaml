            <Button Content="E8" Tag="E8" Foreground="{DynamicResource Foreground}" Background="{DynamicResource ButtonBackground}" Grid.Column="4"/>
            <Button Content="F8" Tag="F8" Foreground="{DynamicResource Foreground}" Background="{DynamicResource ButtonBackground}" Grid.Column="5"/>
            <Button Content="G8" Tag="G8" Foreground="{DynamicResource Foreground}" Background="{DynamicResource ButtonBackground}" Grid.Column="6"/>
            <Button Content="H8" Tag="H8" Foreground="{DynamicResource Foreground}" Background="{DynamicResource ButtonBackground}" Grid.Column="7"/>
		</Grid>
	</Grid>
</Window>
