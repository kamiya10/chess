            <Button Content="E2" Tag="E2" Foreground="{DynamicResource Foreground}" Background="{DynamicResource ButtonBackground}" Grid.Row="6" Grid.Column="4"/>
            <Button Content="F2" Tag="F2" Foreground="{DynamicResource Foreground}" Background="{DynamicResource ButtonBackground}" Grid.Row="6" Grid.Column="5"/>
            <Button Content="G2" Tag="G2" Foreground="{DynamicResource Foreground}" Background="{DynamicResource ButtonBackground}" Grid.Row="6" Grid.Column="6"/>
            <Button Content="H2" Tag="H2" Foreground="{DynamicResource Foreground}" Background="{DynamicResource ButtonBackground}" Grid.Row="6" Grid.Column="7"/>
            <Button Content="A3" Tag="A3" Foreground="{DynamicResource Foreground}" Background="{DynamicResource ButtonBackground}" Grid.Row="5"/>
            <Button Content="B3" Tag="B3" Foreground="{DynamicResource Foreground}" Background="{DynamicResource ButtonBackground}" Grid.Row="5" Grid.Column="1"/>
