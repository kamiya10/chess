            <Button Content="B5" Tag="B5" Foreground="{DynamicResource Foreground}" Background="{DynamicResource ButtonBackground}" Grid.Row="3" Grid.Column="1"/>
            <Button Content="C5" Tag="C5" Foreground="{DynamicResource Foreground}" Background="{DynamicResource ButtonBackground}" Grid.Row="3" Grid.Column="2"/>
